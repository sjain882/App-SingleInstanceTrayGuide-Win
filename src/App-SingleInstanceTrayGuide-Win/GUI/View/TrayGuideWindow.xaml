<Window x:Class="App_SingleInstanceTrayGuide_Win.TrayGuideWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:designVM="clr-namespace:App_SingleInstanceTrayGuide_Win.GUI.ViewModel.DesignTime"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance designVM:TrayGuideWindowDesignViewModel, IsDesignTimeCreatable=True}"
        Title="Info"
        Width="{Binding XWidth, Mode=TwoWay}"
        Height="{Binding YHeight, Mode=TwoWay}"
        Left="{Binding Left, Mode=TwoWay}"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        Top="{Binding Top, Mode=TwoWay}"
        WindowStartupLocation="Manual"
        WindowStyle="None">

    <!--  Main grid  -->
    <Grid Margin="5">

        <!-- ====== ROWS ====== -->
        <Grid.RowDefinitions>

            <!--  Title label  -->
            <RowDefinition Height="Auto" />

            <!--  Taskbar guide label  -->
            <RowDefinition Height="Auto" />

            <!--  Taskbar image  -->
            <RowDefinition Height="Auto" />

            <!--  App icon guide label  -->
            <RowDefinition Height="Auto" />

            <!--  App icon image  -->
            <RowDefinition Height="Auto" />

            <!--  Overflow guide label | Overflow image  -->
            <RowDefinition Height="Auto" />

            <!--  OK button  -->
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>


        <!-- ====== CONTENT ====== -->

        <!--  Title label  -->
        <Label
            Grid.Row="0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding TitleLabelText, Mode=TwoWay}"
            FontSize="40"
            FontWeight="Bold"
            Margin="5,5,5,20"/>

        <!--  Taskbar guide label  -->
        <Label
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding TaskbarGuideText, Mode=TwoWay}"
            FontSize="22" 
            Margin="5"/>

        <!--  Taskbar guide image  -->
        <Image
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="{ Binding TaskbarImage, Mode=OneWay}"
            Stretch="Uniform"
            Margin="5,0,5,40"
            MaxWidth="512"/>

        <!--  App icon guide label  -->
        <Label
            Grid.Row="3"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="{Binding AppControlText, Mode=TwoWay}"
            FontSize="22"
            Margin="5"/>

        <!--  App icon image  -->
        <Image
            Grid.Row="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="{ Binding AppIconImage, Mode=OneWay}"
            Stretch="Uniform"
            Width="192"
            Height="192"
            Margin="5,0,5,46"
            MaxWidth="192"
            MaxHeight="192"/>

        <!--  Overflow guide label | Overflow image  -->
        <Grid Grid.Row="5" Margin="5,5,5,5">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*" />
                <ColumnDefinition Width="15*" />
            </Grid.ColumnDefinitions>

            <Label
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Content="{Binding OverflowText, Mode=TwoWay}"
                FontSize="18" 
                Margin="5,5,10,5"/>

            <Image
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Source="{ Binding OverflowIcon, Mode=OneWay}"
                Stretch="Uniform"
                Margin="5"
                MaxWidth="64"/>

        </Grid>


        <!--  OK button  -->
        <Button
            Grid.Row="6"
            Name="StartBtn"
            Padding="20,4"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            d:Content="OK"
            Command="{Binding CloseWindowCommand}"
            Content="{Binding OKButtonText, FallbackValue=OK, Mode=TwoWay}"
            FontSize="30"
            Margin="15"/>
    </Grid>

</Window>